{
  "rules": {
    ".read": false,
    ".write": false,
    
    "deviceStatus": {
      "$deviceId": {
        ".read": "auth != null",
        ".write": true,
        
        "alcoholLevel": {
          ".validate": "newData.isNumber() && newData.val() >= 0"
        },
        
        "engine": {
          ".validate": "newData.isString() && (newData.val() == 'ON' || newData.val() == 'OFF' || newData.val() == 'UNKNOWN')"
        },
        
        "timestamp": {
          ".validate": "newData.isNumber()"
        },
        
        "$other": {
          ".validate": false
        }
      }
    }
  }
}
