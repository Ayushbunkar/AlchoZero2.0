rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.email != null;
    }
    
    // Contact form submissions - allow create for all, read/update/delete for admins
    match /contact/{contactId} {
      allow create: if true; // Anyone can submit contact form
      allow read, update, delete: if isAdmin();
    }
    
    // Device logs - allow read and write for authenticated users
    match /logs/{logId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated(); // Allow authenticated users to create logs
      allow update, delete: if isAdmin(); // Only admins can modify/delete
    }
    
    // Alerts - allow read and write for authenticated users
    match /alerts/{alertId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated(); // Allow authenticated users to create alerts
      allow update: if isAdmin(); // Admins can mark alerts as resolved
      allow delete: if isAdmin();
    }
    
    // Engine logs - read for authenticated users
    match /engineLogs/{logId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Statistics - read for authenticated users
    match /statistics/{statId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only Cloud Functions can write
    }
    
    // User profiles (optional)
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Devices - authenticated users can manage their devices
    match /devices/{deviceId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAuthenticated();
    }
    
    // Counters - for generating unique IDs
    match /counters/{counterId} {
      allow read, write: if isAuthenticated();
    }
    
    // User profiles for additional data
    match /user_profiles/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // User settings
    match /user_settings/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Security logs
    match /security_logs/{logId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
    }
    
    // Default deny all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
